<?xml version="1.0"?>
<config>
  <modules>
    <Recomiendo_Theme>
      <version>0.1.0</version>
    </Recomiendo_Theme>
  </modules>
  <global>
    <page>
      <layouts>
        <custom_home module="page" translate="label">
          <label>Custom Home</label>
          <template>page/home.phtml</template>
          <layout_handle>page_custom_layout</layout_handle>
        </custom_home>
        <baskets module="page" translate="label">
          <label>Cestas</label>
          <template>page/html/custom/pages/basket.phtml</template>
          <layout_handle>page_custom_layout</layout_handle>
        </baskets>
        <recipes module="page" translate="label">
          <label>Recetas</label>
          <template>page/html/custom/pages/recipes.phtml</template>
          <layout_handle>page_custom_layout</layout_handle>
        </recipes>
      </layouts>
    </page>
    <helpers>
      <ceo_frontend_helper>
        <class>Recomiendo_Theme_Helper</class>
      </ceo_frontend_helper>
    </helpers>
  </global>
</config>
