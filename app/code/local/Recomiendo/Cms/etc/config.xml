<?xml version="1.0"?>
<config>
  <modules>
    <Recomiendo_Cms>
      <version>0.2.0</version>
    </Recomiendo_Cms>
  </modules>
  <admin>
    <routers>
      <recms>
        <use>admin</use>
        <args>
          <modules>
            <recomiendo_cms before="Mage_Adminhtml">Recomiendo_Cms</recomiendo_cms>
          </modules>
          <frontName>recms</frontName>
        </args>
      </recms>
    </routers>
  </admin>
  <adminhtml>
    <layout>
      <updates>
        <slideshow>
          <file>recomiendo/cms.xml</file>
        </slideshow>
      </updates>
    </layout>
  </adminhtml>
  <global>
    <models>
      <recomiendo_cms>
        <class>Recomiendo_Cms_Model</class>
        <resourceModel>recms_resource</resourceModel>
      </recomiendo_cms>
      <recms_resource>
        <class>Recomiendo_Cms_Model_Resource</class>
        <entities>
          <basketcell>
            <table>recomiendo_homepage_basket_cell</table>
          </basketcell>
          <slideshow>
            <table>ma2_slideshow</table>
          </slideshow>
        </entities>
      </recms_resource>
    </models>
    <resources>
      <recms_setup>
        <setup>
          <module>Recomiendo_Cms</module>
        </setup>
        <connection>
          <use>core_setup</use>
        </connection>
      </recms_setup>
      <recms_write>
        <connection>
          <use>core_write</use>
        </connection>
      </recms_write>
      <recms_read>
        <connection>
          <use>core_read</use>
        </connection>
      </recms_read>
    </resources>
    <blocks>
      <recomiendo_cms>
        <class>Recomiendo_Cms_Block</class>
      </recomiendo_cms>
    </blocks>
    <helpers>
      <recomiendo_cms>
        <class>Recomiendo_Cms_Helper</class>
      </recomiendo_cms>
    </helpers>
  </global>
  <default>
    <slideshow_options>
      <general>
        <slide_height>300</slide_height>
        <display_title>1</display_title>
        <display_content>1</display_content>
        <interval>3000</interval>
        <transitionType>slide</transitionType>
        <transitionTime>1.5</transitionTime>
        <manTransitionTime>0.5</manTransitionTime>
        <navigation>1</navigation>
        <controls>1</controls>
        <pauseOnHover>0</pauseOnHover>
      </general>
    </slideshow_options>
  </default>
</config>
