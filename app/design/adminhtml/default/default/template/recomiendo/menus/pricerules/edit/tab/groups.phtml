        data.price_club = arguments[2];
      }
      Element.insert($('<?php echo $_htmlId ?>_container'), {'bottom':this.template.evaluate(data)});

      $('groups_row_'+data.index+'_name').setValue(data.name);
      $('groups_row_'+data.index+'_price').setValue(data.price);
      $('groups_row_'+data.index+'_price_club').setValue(data.price_club);
      $('save-groups').setStyle({ display: 'initial' });
    },
      enableElement: function(elem) {
        elem.disabled = false
          elem.removeClassName('disabled');
      },
        deleteItem : function(event) {
          var tr = Event.findElement(event, 'tr');
          if (tr) {
            tr.parentNode.removeChild(tr);
          }
        }
}

